# Enforce using pnpm
engine-strict=true

# Auto-install peers
auto-install-peers=true

# Hoist pattern for better compatibility
shamefully-hoist=true

# Approve build scripts for specific packages (suppresses pnpm warnings)
# These packages have legitimate postinstall/prepare scripts
onlyBuiltDependencies=@sentry/cli,@vercel/speed-insights,bufferutil,core-js,cypress,esbuild,keccak,sharp,unrs-resolver,utf-8-validate
