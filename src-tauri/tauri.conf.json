{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "GatewayZ",
  "version": "1.0.0",
  "identifier": "com.gatewayz.desktop",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "pnpm build:desktop",
    "frontendDist": "../out"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "GatewayZ",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "transparent": false,
        "visible": true,
        "focus": true,
        "shadow": true,
        "titleBarStyle": "Visible",
        "hiddenTitle": false,
        "tabbingIdentifier": "GatewayZ",
        "acceptFirstMouse": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false,
      "title": "GatewayZ"
    },
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://auth.privy.io https://challenges.cloudflare.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; frame-src 'self' https://auth.privy.io https://verify.walletconnect.com https://challenges.cloudflare.com; child-src 'self' https://auth.privy.io https://verify.walletconnect.com; connect-src 'self' https://api.gatewayz.ai https://*.gatewayz.ai wss://*.gatewayz.ai https://*.privy.io https://*.sentry.io https://*.walletconnect.com wss://*.walletconnect.com",
      "freezePrototype": false,
      "dangerousDisableAssetCspModification": false
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "Copyright 2026 Alpaca Network",
    "category": "Productivity",
    "shortDescription": "AI Chat Interface powered by 100+ models",
    "longDescription": "GatewayZ Desktop - A unified AI chat interface that provides access to 100+ AI models from 30+ providers including OpenAI, Anthropic, Google, and more.",
    "createUpdaterArtifacts": true,
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null,
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "webviewInstallMode": {
        "type": "embedBootstrapper",
        "silent": true
      },
      "wix": null,
      "nsis": {
        "template": null,
        "headerImage": null,
        "sidebarImage": null,
        "installerIcon": null,
        "installMode": "currentUser",
        "languages": null
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true,
      "scope": []
    },
    "notification": {
      "all": true
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDc5MUIyNUM4NkE1NUJFMzQKUldRMHZsVnF5Q1ViZWROUW5oNEQ2MG4ycWFZelVkKy8zUzBFSFNwWmZ6NjRncE9MV2hsVDNJZUUK",
      "endpoints": [
        "https://api.gatewayz.io/desktop/updates/{{target}}/{{arch}}/{{current_version}}"
      ],
      "windows": {
        "installMode": "passive"
      }
    },
    "deep-link": {
      "desktop": {
        "schemes": ["gatewayz"]
      }
    }
  }
}
